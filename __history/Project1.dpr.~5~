program Project1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

function IsPrime(const aNumero: integer): Boolean;
var i : Integer;
begin
  if aNumero <= 1 then result := False;

  for i := 2 to aNumero do begin
    if (aNumero mod i = 0) then result:= False;
  end;

  result := True;



end;


var
  numero: Integer;
begin
  try
    Writeln('Digite um numero para verificar se é primo:');


    try
      Readln(numero);
    except
      WriteLn('Digite apenas números');
      Exit;
    end;

    if isPrime(numero) then begin
      WriteLn('O número ' +numero.ToString +' é primo!');
    end else begin
      WriteLn('O número ' +numero.ToString +'NÃO é primo!');
    end;
          Readln(numero);


  except
    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);
  end;
end.
